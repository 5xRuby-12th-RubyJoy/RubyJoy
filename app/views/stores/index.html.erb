<h1 class="pt-24 text-3xl font-bold leading-tight tracking-tight text-center text-black md:text-3xl dark:text-white mb-5">
  商店總覽
</h1>
<!-- search bar -->
<div class="md:w-1/4 sm:w-3/4 mx-auto">
  <%= search_form_for @q  do |f| %>
    <div class="relative">
      <%= f.hidden_field :event, value: @event.id%>
      <%= f.search_field :title_cont, class: "block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder:"搜尋商店", autofocus: true%>
      <button id="search-btn" type="submit" class="absolute right-2 bottom-1 show-btn ">
        搜尋
      </button>
    </div>
  <% end %>
</div>
<div class="px-10 my-20">
  <p id="display-text" class="hidden text-6xl text-center">我們已經找到了最好的禮物了!! </p>
</div>
<!-- store card list -->
<div class="px-3  pt-4">
  <div class="flex flex-wrap justify-center">
    <%@store.each do |store| %>
      <%=link_to event_store_products_path(@event,store) do%> 
        <div class="flex justify-center flex-wrap w-full md:w-1/3 b-1 mb-4">
          <div>
            <%if store.avatar.attached?%>
              <img src="<%=(url_for(store.avatar))%>" class="rounded align-center img-fixed"/>
            <%end%>
        </div>
        <h1 class="text-center text-theme_text5 font-bold text-2xl tracking-tight mb-2">
          <%=store.title%>
        </h1>
        <p class="text-lg text-theme_text5 mb-3">
          <%=store.description%>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
<script>
    let displayText = document.querySelector("#display-text");
    let searchBtn = document.querySelector("#search-btn");
    searchBtn.addEventListener("click",(e)=>{
        e.preventDefault();
        displayText.classList.toggle("hidden");
    });
</script>

