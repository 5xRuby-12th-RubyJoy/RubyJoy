
<h1 class=" pt-20 text-3xl font-bold leading-tight tracking-tight text-center text-black md:text-3xl dark:text-white mb-5">
  商店總覽
</h1>

<div class="max-w-sm rounded overflow-hidden shadow-lg">
  <%@store.each do |store| %>
  
    <a href="/stores/<%= store.id %>/products">
      <%if store.avatar.attached?%>
        <img src="<%=(url_for(store.avatar))%>">
      <%end%>
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">
          <%=store.title%>
        </div>

        <p class="text-gray-700 text-base">
           &nbsp; &nbsp;<%=store.description%>
        </p>
      </div>
   </a>
  <% end %>
</div>
 


