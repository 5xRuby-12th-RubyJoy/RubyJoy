<section class="flex flex-wrap items-center justify-center gap-16 h-screen -mt-16 pt-20 ">
  <div class="container px-6 pt-14 mx-auto flex items-center justify-center lg:h-full ">
    <div class="flex pb-3 justify-center items-center  flex-wrap g-6 text-gray-800 ">
      <div class=" md:col-span-2 ">
        <%= form_with model:@store do |f| %>
          <div class="shadow-xl overflow-hidden rounded-md ">
            <div class="px-4 py-3 bg-theme_light_purple text-right sm:px-6 flex justify-center rounded-t">
              <h1 class=" text-white text-2xl font-bold leading-tight tracking-tight text-center  md:text-3xl dark:text-white ">
                編 輯 商 店
              </h1>
            </div>
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6 ">
                <div class="col-span-6 sm:col-span-3 ">
                  <%= f.label :title, '商店名稱', autofocus: true, 
                  class:"block mb-2 text-base font-medium text-gray-900 dark:text-white" %>
                  <%= f.text_area :title, class: " resize-none bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" , autofocus: true , require: true%>
                  
                  <div class="mt-3">
                    <%= f.label :description, '商店描述', class:"block mb-2 text-base font-medium text-gray-900 dark:text-white"  %>
                    <%= f.text_area :description  ,class: "resize-none bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "寫下商店描述，讓大家更認識你的商店吧！", require: true %>
                  </div>
                  <div class="col-span-6 sm:col-span-3 pt-6 ">
                    <%=f.label :avatar,"更換圖片（無需更換請點擊完成編輯）", class: "block mb-2 text-base font-medium text-gray-900 dark:text-white"%>
                    <%=f.file_field :avatar, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
                  </div>    
                </div>
  
                <div class=" col-span-6 sm:col-span-3 flex">
                  <%if @store.avatar.attached?%>
                  <img src="<%=(url_for(@store.avatar))%>" width="300" height="300" class="rounded mx-auto items-center">
              <%end%>

                </div>
                <div class=" col-span-6 sm:col-span-3">

              </div>
            </div>
            <div class="px-4 py-3 text-right sm:px-6 flex justify-center">
              <button type="submit" class="theme-button">
                完 成 編 輯
              </button>
            </div>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</section>





