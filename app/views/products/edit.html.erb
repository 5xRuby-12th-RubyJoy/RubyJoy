<h1>商品更新</h1>
<%=form_with(model: @product){|f|%>
  <div>
    <%=f.label :name%>
    <%=f.text_field :name%>
  </div>
  <div>
    <%=f.label :description%>
    <%=f.text_area :description%>
  </div>
  <div>
    <%=f.label :price%>
    <%=f.text_field :price%>
  </div>
  <div>
    <%=f.label :stock%>
    <%=f.text_field :stock%>
  </div>
  <%=f.submit "更新"%>
<%}%>
