<h2>會員註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :name, '暱稱' %><br />
    <%= f.text_field :name %>
    <input type="hidden" name="user[role]" value="user">
  </div>
  
  <div class="field">
    <%= f.label :email, '信箱' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :role, '我要註冊會員帳號' %>
    <input type="radio" name="user[role]" value="user" />
    <%= f.label :role, '我要註冊店舖帳號' %>
    <input type="radio" name="user[role]" value="vender" />
  </div>



  <div class="field">
    <%= f.label :password, '密碼' %>
    <% if @minimum_password_length %>
    <span>(密碼需至少 <%= @minimum_password_length %> 個字元)</>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '再次確認密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to '返回首頁', root_path %>
