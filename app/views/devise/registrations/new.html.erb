<section class="h-screen -mt-16 pt-20 ">
  <div class="container h-full flex items-center px-6 mx-auto">
    <div
      class="flex-1 flex justify-center my-atuo items-center my-auto flex-wrap g-6 text-gray-800"
    >
      <div class="md:w-8/12 lg:w-6/12 mb-12 md:mb-0">
        <h1
          class="text-3xl font-bold leading-tight tracking-tight text-center text-theme_text4 dark:text-white mb-5"
        >
          註 冊
        </h1>
        <%= image_tag "/assets/sign_up_background_img.jpg", class: "w-full rounded-lg shadow-2xl big_cover_img", alt: "image" %>
      </div>
      <div class="md:w-8/12 lg:w-5/12 lg:ml-20">
        <form
          class="new_user"
          id="new_user"
          action="/users"
          accept-charset="UTF-8"
          method="post"
        >
          <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
          <div class="mb-3">
            <label
              for="user_name"
              autofocus="autofocus"
              class="block mb-2 text-base font-medium text-gray-900 dark:text-white"
              >暱稱</label
            >
            <%= text_field_tag "user[name]", nil, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, required: true, id: "user_name" %>
          </div>
          <div class="mb-3">
            <label
              for="user_email"
              class="block mb-2 text-base font-medium text-gray-900 dark:text-white"
              >信箱</label
            >
            <%= email_field_tag "user[email]", nil, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "email", required: true, id: "user_email", placeholder: "name@example.com" %>
          </div>
          <div class="mb-3">
            <label
              for="user_password"
              class="block mb-2 text-base font-medium text-gray-900 dark:text-white"
              >密碼</label
            >
            <%= password_field_tag "user[password]", nil, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "current-password", required: true, id: "user_password", placeholder: "密碼需要至少6個字元" %>
          </div>
          <div class="mb-3">
            <label
              for="user_password_confirmation"
              class="block mb-2 text-base font-medium text-gray-900 dark:text-white"
              >再次輸入密碼</label
            >
            <%= password_field_tag 'user[password_confirmation]', nil, autocomplete: 'new-password', id: 'user_password_confirmation', placeholder: '密碼需要至少6個字元', class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', required: true %>
          </div>
          <div class="mb-5">
            <input type="radio" name="user[role]" value="user" required="" />
            <label for="user_role" class="mr-5">註冊會員</label>
            <input type="radio" name="user[role]" value="vendor" required="" />
            <label for="user_role">註冊店舖</label>
          </div>
          <button
            type="submit"
            class="theme-button"
            data-mdb-ripple="true"
            data-mdb-ripple-color="light"
          >
            註冊
          </button>
  
          <div class="mt-3">
            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
              已經有帳號了嗎?
              <%= link_to '登入', '/sign_in_session', class: 'font-medium text-primary-600 hover:underline dark:text-primary-500 pb-5' %>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
